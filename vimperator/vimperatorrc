set "editor=aterm -e vim"
set guioptions=rnb
set runtimepath=~/.vimperator
set showstatuslinks=2
set showtabline=2
"dont focus input automaticallu
set focuscontent
" addons downloads help javascript prefs en una nueva tab
set newtab=all
"que ponga el foco en las descargas solamente
set activate=downloads
"Lo que se baje de megaupload que lo ponga en su dir especifico
autocmd DownloadPost megaupload.com :!mv "<file>"  ~/descargas/
autocmd DownloadPost megavideo.com :!mv "<file>"  ~/descargas/
autocmd DownloadPost stagevu.com :!mv "<file>"  ~/descargas/
autocmd DownloadPost rapidshare.com :!mv "<file>"  ~/descargas/


" Ver version del history para saltar directamente fuera de la pagina actual con J
noremap J <Esc>:jumps<CR>:back 
noremap K <Esc>:closedTabs<CR> 
noremap D <Esc>:dl<CR> 
noremap j 10j
noremap k 10k
inoremap <C-n> <Esc>:tabnext<CR>
"inoremap <F9> <Esc>:tabprevious<CR>
"inoremap <F10> <Esc>:tabnext<CR>
"show  current url
let g:buftabs_showCurrentUrl=1


style! * .BufTabSelected { font-weight: bold;color:green }
style! -name statusbar chrome://* <<EOF
